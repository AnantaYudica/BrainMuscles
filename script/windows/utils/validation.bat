@ECHO OFF

SETLOCAL

SET TYPE=
SET ARG=
SET MSG=

SET TYPE=%1
SET TYPE=%TYPE:"=%

SET ARG=%2
SET ARG=%ARG:"=%

SET MSG=%3
SET MSG=%MSG:"=%

IF "%TYPE%"=="FILE" (
	GOTO :VALIDATION_FILE
)
GOTO :HELP


:VALIDATION_FILE
IF NOT EXIST %ARG% (
	ECHO %MSG%
	EXIT /B 4
)
GOTO :END

:HELP
EXIT /B 4

:END
ENDLOCAL